<div class="container mt-4">
  <div class="row">
    <!-- Image and details column -->
    <div class="col-md-8">
      <img src="https://images.unsplash.com/photo-1554995207-c18c203602cb?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="img-fluid" alt="Garden Flat">
      <h1 class="mt-3"><%= @flat.name %></h1>
      <p class="text-muted"><%= @flat.address %></p>
      <h3 class="mt-3">A bit more about this flat...</h3>
      <p><%= @flat.description %></p>
      <!-- Insert map here -->
    </div>

    <!-- Booking form column -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Book this place!</h3>
          <form>
            <div class="form-group">
              <label for="bookingFrom">From:</label>
              <input type="date" class="form-control" id="bookingFrom">
            </div>
            <div class="form-group my-3">
              <label for="bookingTo">To:</label>
              <input type="date" class="form-control" id="bookingTo">
            </div>
            <button type="submit" class="btn btn-primary btn-block y-3">Book</button>
          </form>
        </div>
      </div>
      <div class="card mt-3">
        <div class="card-body">
          <h4 class="card-title">Details</h4>
          <p class="card-text"><i class="fas fa-bed"></i> 3 <i class="fas fa-euro-sign"></i> 75</p>
        </div>
      </div>
      <!-- Social share buttons -->
      <div class="mt-3">
        <a href="#" class="btn btn-outline-primary btn-sm"><i class="fab fa-facebook-f"></i></a>
        <a href="#" class="btn btn-outline-info btn-sm"><i class="fab fa-twitter"></i></a>
        <a href="#" class="btn btn-outline-danger btn-sm"><i class="fab fa-pinterest"></i></a>
      </div>
    </div>
  </div>
</div>
